{
  "name": "validations-br",
  "version": "1.2.0",
  "description": "A validator to BR informations",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "https://github.com/reactivando/validations-br.git",
  "homepage": "https://github.com/reactivando/validations-br#readme",
  "author": "Reactivando <reactivando2@gmail.com>",
  "keywords": [
    "BR",
    "Brazil",
    "Validator"
  ],
  "license": "MIT",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./src",
    "test": "jest",
    "prepare": "npm run build && husky install",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "8.0.3",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.4"
  },
  "lint-staged": {
    "*.{js,json,jsx,ts,tsx}": [
      "eslint",
      "prettier --check"
    ]
  }
}
